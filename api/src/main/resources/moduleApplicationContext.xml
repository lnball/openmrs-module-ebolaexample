<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Services accessible via Context.getService() -->
	<bean id="bedAssignmentService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="target">
			<bean class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.BedAssignmentServiceImpl">
				<property name="adtService" ref="adtService"/>
				<property name="providerService" ref="providerService"/>
				<property name="encounterService" ref="encounterService"/>
				<property name="visitService" ref="visitService"/>
				<property name="locationService" ref="locationService"/>
				<property name="administrationService" ref="adminService"/>
			</bean>
		</property>
		<property name="preInterceptors">
			<ref bean="serviceInterceptors" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="transactionAttributeSource" />
		</property>
	</bean>

    <bean id="pharmacyService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.PharmacyServiceImpl">
                <property name="scheduledDoseDAO">
                    <bean class="org.openmrs.module.ebolaexample.db.HibernateScheduledDoseDAO"/>
                </property>
				<property name="orderService">
					<ref bean="orderService"/>
				</property>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean id="ivFluidOrderStatusService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.IvFluidOrderStatusServiceImpl">
                <property name="ivFluidOrderStatusDAO">
                    <bean class="org.openmrs.module.ebolaexample.db.IvFluidOrderStatusDAO"/>
                </property>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

    <bean id="featureToggleService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
        <property name="transactionManager">
            <ref bean="transactionManager" />
        </property>
        <property name="target">
            <bean class="${project.parent.groupId}.${project.parent.artifactId}.api.impl.FeatureToggleServiceImpl">
                <property name="featureToggleDAO">
                    <bean class="org.openmrs.module.ebolaexample.db.FeatureToggleDAO"/>
                </property>
            </bean>
        </property>
        <property name="preInterceptors">
            <ref bean="serviceInterceptors" />
        </property>
        <property name="transactionAttributeSource">
            <ref bean="transactionAttributeSource" />
        </property>
    </bean>

	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>${project.parent.groupId}.${project.parent.artifactId}.api.BedAssignmentService</value>
				<ref local="bedAssignmentService"/>
			</list>
		</property>
	</bean>

    <bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>${project.parent.groupId}.${project.parent.artifactId}.api.PharmacyService</value>
				<ref local="pharmacyService"/>
			</list>
		</property>
	</bean>

    <bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>${project.parent.groupId}.${project.parent.artifactId}.api.IvFluidOrderStatusService</value>
				<ref local="ivFluidOrderStatusService"/>
			</list>
		</property>
	</bean>

    <bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>${project.parent.groupId}.${project.parent.artifactId}.api.FeatureToggleService</value>
				<ref local="featureToggleService"/>
			</list>
		</property>
	</bean>

</beans>
